<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>fuel.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>fond</object-name>
    <object-name>fuelL</object-name>
    <object-name>fueloffL</object-name>
    <object-name>fueloffR</object-name>
    <object-name>fuelR</object-name>

    <!-- Objets transparents -->
  </animation>

  <!--palivo_cut_off -->
  <animation>
    <object-name>fueloffL</object-name>
    <property>/instrumentation/engine/indicated-cutoffl-norm</property>
    <type>rotate</type>
    <factor>   -40 </factor>
    <offset-deg> 0 </offset-deg>
    <min-deg>  -40 </min-deg>
    <max-deg>   40 </max-deg>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>fueloffR</object-name>
    <property>/instrumentation/engine/indicated-cutoffr-norm</property>
    <factor>   -40 </factor>
    <offset-deg> 0 </offset-deg>
    <min-deg>  -40 </min-deg>
    <max-deg>   40 </max-deg>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!--palivo_cock -->
  <animation>
    <type>rotate</type>
    <object-name>fuelL</object-name>
    <property>/controls/engines/engine[0]/cutoff-emerg-cmd</property>
    <factor>      80 </factor>
    <offset-deg> -40 </offset-deg>
    <min-deg>    -40 </min-deg>
    <max-deg>     40 </max-deg>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>fuelR</object-name>
    <property>/controls/engines/engine[1]/cutoff-emerg-cmd</property>
    <factor>      80 </factor>
    <offset-deg> -40 </offset-deg>
    <min-deg>    -40 </min-deg>
    <max-deg>     40 </max-deg>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

